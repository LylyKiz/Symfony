{% extends 'base.html.twig' %}

{% block body %}
    <h1>Информация по автомобилю</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th scope="row">Марка автомобиля</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th scope="row">Гос. номер</th>
                <td>{{ car.number }}</td>
            </tr>
            <tr>
                <th scope="row">Дата добавления</th>
                <td>{% if car.createdAt %}{{ car.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th scope="row">Дата редактирования</th>
                <td>{% if car.updatedAt %}{{ car.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
            <a class="btn btn-primary" href="{{ path('car_index') }}">Список автомобилей</a>
            <a class="btn btn-success" href="{{ path('car_edit', { 'id': car.id }) }}">Редактировать</a>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Удалить">
            {{ form_end(delete_form) }}
{% endblock %}
