{% extends 'base.html.twig' %}
{% block body %}
    <h1>Список автомобилей</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">№ п/п</th>
                <th scope="col">Марка</th>
                <th scope="col">Гос. номер</th>
                <th scope="col">Дата добавления</th>
                <th scope="col">Дата редактирования</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 1 %}
        {% for car in cars %}
            <tr>
                <td><a href="{{ path('car_show', { 'id': car.id }) }}">{{i}}</a></td>
                <td>{{ car.brand }}</td>
                <td>{{ car.number }}</td>
                <td>{% if car.createdAt %}{{ car.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if car.updatedAt %}{{ car.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                            <a class="btn btn-primary" href="{{ path('car_show', { 'id': car.id }) }}">Просмотр</a>
                            <a class="btn btn-success" href="{{ path('car_edit', { 'id': car.id }) }}">Редактировать</a>
                </td>
            </tr>
            {% set i = i +1 %}
        {% endfor %}
        </tbody>
    </table>
            <a class="btn btn-primary"  href="{{ path('car_new') }}">Создать новый автомобиль</a>
            <a class="btn btn-primary"  href="{{ path('history_index') }}">История аренды</a>
{% endblock %}
